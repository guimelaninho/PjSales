@model SalesWebMvc.Models.ViewModels.VendedorFormViewModel
@{
    ViewData["Title"] = "Editar Vendedor";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Vendedor.Id"  />
            <div class="form-group">
                <label for="Nome" class="control-label">Nome</label>
                <input asp-for="Vendedor.Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Email" class="control-label">E-mail</label>
                <input asp-for="Vendedor.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label for="DataNascimento" class="control-label">Data De Nascimento</label>
                <input asp-for="Vendedor.DataNascimento" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Salario" class="control-label">Salário</label>
                <input asp-for="Vendedor.SalarioBase" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.DepartmentId" class="control-label"> Departamento</label>
                <select asp-for="Vendedor.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Name"))" class="form-control"></select>

            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
                <a asp-action="Index" class="btn btn-warning"> Voltar </a>
            </div>

        </form>
    </div>
</div>

